{% extends "AcmePizzaBundle::layout.html.twig" %}

{% block title parent() ~ " - Pizza - Create/Update" %}

{% block content %}

{% if pizza.id %}
    <h2>Updating "{{ pizza.name }}"</h2>
{% else %}
    <h2>Creating new pizza</h2>
{% endif %}

<form method="post" action="{{ app.request.requestUri }}" {{ form.enctype }}>
    {{ form.widget }}
    <input type="submit" />
</form>

<script>
    alert('ok');
</script>

{% endblock %}